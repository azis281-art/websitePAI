    <script>
        // --- Logika Navigasi Halaman (SPA Sederhana) ---
        // Semua tombol navigasi (Home, Bab 1, etc.) memanggil fungsi ini.
        
        // Menampilkan halaman berdasarkan ID
        function showPage(pageId) {
            // Sembunyikan semua konten halaman
            document.querySelectorAll('.page-content').forEach(function(page) {
                page.style.display = 'none';
            });
            // Tampilkan halaman yang diminta
            const activePage = document.getElementById(pageId);
            if (activePage) {
                activePage.style.display = 'block';
            }
            
            // Tutup menu mobile jika sedang terbuka
            document.getElementById('mobile-menu').style.display = 'none';
        }

        // --- Logika Navigasi Tab (di dalam halaman Bab) ---
        // Tombol (Materi Teks, Video, Audio, Kuis) memanggil fungsi ini.
        function showTab(tabId) {
            const pageId = tabId.split('_')[0]; // Mendapatkan prefix (misal: 'bab1')
            
            // Sembunyikan semua konten tab di dalam container yang sama
            document.querySelectorAll('#' + pageId + ' .tab-content').forEach(function(tab) {
                tab.style.display = 'none';
            });
            
            // Tampilkan tab yang diminta
            const activeTab = document.getElementById(tabId);
            if (activeTab) {
                activeTab.style.display = 'block';
            }
            
            // Atur style tombol tab
            document.querySelectorAll('#' + pageId + ' .tab-button').forEach(function(button) {
                button.classList.remove('active');
            });
            
            // Tambahkan kelas 'active' ke tombol yang diklik (cari berdasarkan onclick)
            const activeButton = document.querySelector('button[onclick="showTab(\'' + tabId + '\')]');
            if (activeButton) {
                activeButton.classList.add('active');
            }
        }

        // --- Logika Menu Mobile ---
        // Tombol menu "hamburger" di HP memanggil fungsi ini.
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            if (menu.style.display === 'none') {
                menu.style.display = 'block';
            } else {
                menu.style.display = 'none';
            }
        });
        
        // Atur halaman default saat pertama kali memuat
        document.addEventListener('DOMContentLoaded', function() {
            showPage('home');
            showTab('bab1_teks'); // Atur tab default untuk bab1
        });
    </script>
</body>
</html>

